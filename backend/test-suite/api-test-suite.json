{
  "auth": {
    "signup": {
      "url": "/api/auth/signup",
      "method": "POST",
      "description": "Register a new user",
      "body": {
        "email": "test@example.com",
        "password": "SecurePass123!",
        "role": "User"
      },
      "expectedResponse": {
        "status": 200,
        "hasToken": true
      }
    },
    "verifyEmail": {
      "url": "/api/auth/verify-email",
      "method": "POST",
      "description": "Verify user's email",
      "params": {
        "email": "test@example.com",
        "code": "123456"
      },
      "expectedResponse": {
        "status": 200,
        "message": "Email verified successfully"
      }
    },
    "login": {
      "url": "/api/auth/login",
      "method": "POST",
      "description": "Login user",
      "body": {
        "email": "test@example.com",
        "password": "SecurePass123!",
        "twoFactorCode": "123456"
      },
      "expectedResponse": {
        "status": 200,
        "hasToken": true,
        "hasRefreshToken": true
      }
    },
    "refreshToken": {
      "url": "/api/auth/refresh-token",
      "method": "POST",
      "description": "Refresh authentication token",
      "body": {
        "refreshToken": "your-refresh-token"
      },
      "expectedResponse": {
        "status": 200,
        "hasNewToken": true
      }
    },
    "forgotPassword": {
      "url": "/api/auth/forgot-password",
      "method": "POST",
      "description": "Initiate password reset",
      "params": {
        "email": "test@example.com"
      },
      "expectedResponse": {
        "status": 200,
        "message": "Password reset instructions sent"
      }
    },
    "resetPassword": {
      "url": "/api/auth/reset-password",
      "method": "POST",
      "description": "Reset password with token",
      "params": {
        "token": "reset-token",
        "newPassword": "NewSecurePass123!"
      },
      "expectedResponse": {
        "status": 200,
        "message": "Password reset successfully"
      }
    }
  },
  "employee": {
    "save": {
      "url": "/employee/save",
      "method": "POST",
      "description": "Create new employee",
      "body": {
        "firstName": "John",
        "lastName": "Doe",
        "email": "john.doe@example.com",
        "phoneNumber": "+1234567890",
        "dateOfBirth": "1990-01-01",
        "hireDate": "2023-01-01",
        "address": "123 Main St, City, Country",
        "emergencyContact": "Jane Doe: +1987654321"
      },
      "params": {
        "departmentId": "UUID",
        "positionId": "UUID",
        "adminId": "UUID"
      },
      "expectedResponse": {
        "status": 200,
        "message": "Employee saved successfully"
      }
    },
    "bulkSave": {
      "url": "/employee/bulk-save",
      "method": "POST",
      "description": "Create multiple employees",
      "body": [
        {
          "firstName": "John",
          "lastName": "Doe",
          "email": "john.doe@example.com"
        },
        {
          "firstName": "Jane",
          "lastName": "Smith",
          "email": "jane.smith@example.com"
        }
      ],
      "params": {
        "departmentId": "UUID",
        "positionId": "UUID",
        "adminId": "UUID"
      },
      "expectedResponse": {
        "status": 200,
        "message": "Bulk employees saved successfully"
      }
    },
    "update": {
      "url": "/employee/update/{employeeId}",
      "method": "PUT",
      "description": "Update employee details",
      "pathVariables": {
        "employeeId": "UUID"
      },
      "body": {
        "firstName": "John",
        "lastName": "Doe Updated",
        "email": "john.doe.updated@example.com"
      },
      "params": {
        "adminId": "UUID"
      },
      "expectedResponse": {
        "status": 200,
        "message": "Employee updated successfully"
      }
    },
    "transfer": {
      "url": "/employee/transfer/{employeeId}",
      "method": "PUT",
      "description": "Transfer employee to new department/position",
      "pathVariables": {
        "employeeId": "UUID"
      },
      "params": {
        "departmentId": "UUID",
        "positionId": "UUID",
        "adminId": "UUID"
      },
      "expectedResponse": {
        "status": 200,
        "message": "Employee transferred successfully"
      }
    }
  },
